{
  "name": "pdf-review-dashboard",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "build:web": "cd apps/web && npm install && npm run build",
    "build:api": "cd apps/api && npm install && npm run build"
  },
  "devDependencies": {
    "turbo": "^1.10.12"
  },
  "packageManager": "npm@9.6.7",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@pdf-dashboard/types": "file:packages/types"
  }
}
